<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_layout_movie_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/motion_movie_info_with_synopsis"
    >



  <LinearLayout
      android:id="@+id/view_group_movie_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/text_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avengers : \nEnd Game"
        style="?attr/textAppearanceHeadline5"
        />

    <TextView
        android:id="@+id/text_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="8.8 \u2605"
        android:textColor="?attr/colorSecondary"
        style="?attr/textAppearanceSubtitle1"
        />


    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action / Sci-fi"
        style="?attr/textAppearanceSubtitle2"
        />
  </LinearLayout>


  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guide_vertical_50"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent=".5"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guide_horizontal_40"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent=".40"
      />

  <TextView
      android:id="@+id/text_movie_synopsis"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:lineSpacingExtra="8dp"
      android:padding="16dp"
      android:text="@string/synopsis_endgame"
      />
</androidx.constraintlayout.motion.widget.MotionLayout>